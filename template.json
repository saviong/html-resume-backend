{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "profiles_resume_name": {
            "defaultValue": "resume",
            "type": "String"
        },
        "sites_resumevisitor_fn_name": {
            "defaultValue": "resumevisitor-fn",
            "type": "String"
        },
        "dnszones_saviong_com_name": {
            "defaultValue": "saviong.com",
            "type": "String"
        },
        "serverfarms_ASP_htmlresume_bf8b_name": {
            "defaultValue": "ASP-htmlresume-bf8b",
            "type": "String"
        },
        "storageAccounts_saviongresume_name": {
            "defaultValue": "saviongresume",
            "type": "String"
        },
        "domains_saviong_com_name": {
            "defaultValue": "saviong.com",
            "type": "String"
        },
        "databaseAccounts_resumevisitdb_name": {
            "defaultValue": "resumevisitdb",
            "type": "String"
        },
        "storageAccounts_htmlresumefunction_name": {
            "defaultValue": "htmlresumefunction",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2025-01-01",
            "name": "[parameters('storageAccounts_saviongresume_name')]",
            "location": "uksouth",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "kind": "StorageV2",
            "properties": {
                "dnsEndpointType": "Standard",
                "defaultToOAuthAuthentication": false,
                "publicNetworkAccess": "Enabled",
                "allowCrossTenantReplication": false,
                "minimumTlsVersion": "TLS1_2",
                "allowBlobPublicAccess": true,
                "allowSharedKeyAccess": true,
                "largeFileSharesState": "Enabled",
                "networkAcls": {
                    "bypass": "AzureServices",
                    "virtualNetworkRules": [],
                    "ipRules": [],
                    "defaultAction": "Allow"
                },
                "supportsHttpsTrafficOnly": true,
                "encryption": {
                    "requireInfrastructureEncryption": false,
                    "services": {
                        "file": {
                            "keyType": "Account",
                            "enabled": true
                        },
                        "blob": {
                            "keyType": "Account",
                            "enabled": true
                        }
                    },
                    "keySource": "Microsoft.Storage"
                },
                "accessTier": "Hot"
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2025-01-01",
            "name": "[parameters('storageAccounts_htmlresumefunction_name')]",
            "location": "uksouth",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "kind": "Storage",
            "properties": {
                "defaultToOAuthAuthentication": true,
                "publicNetworkAccess": "Enabled",
                "allowCrossTenantReplication": false,
                "minimumTlsVersion": "TLS1_2",
                "allowBlobPublicAccess": false,
                "networkAcls": {
                    "bypass": "AzureServices",
                    "virtualNetworkRules": [],
                    "ipRules": [],
                    "defaultAction": "Allow"
                },
                "supportsHttpsTrafficOnly": true,
                "encryption": {
                    "services": {
                        "file": {
                            "keyType": "Account",
                            "enabled": true
                        },
                        "blob": {
                            "keyType": "Account",
                            "enabled": true
                        }
                    },
                    "keySource": "Microsoft.Storage"
                }
            }
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2024-11-01",
            "name": "[parameters('serverfarms_ASP_htmlresume_bf8b_name')]",
            "location": "UK South",
            "sku": {
                "name": "Y1",
                "tier": "Dynamic",
                "size": "Y1",
                "family": "Y",
                "capacity": 0
            },
            "kind": "functionapp",
            "properties": {
                "perSiteScaling": false,
                "elasticScaleEnabled": false,
                "maximumElasticWorkerCount": 1,
                "isSpot": false,
                "reserved": true,
                "isXenon": false,
                "hyperV": false,
                "targetWorkerCount": 0,
                "targetWorkerSizeId": 0,
                "zoneRedundant": false,
                "asyncScalingEnabled": false
            }
        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2024-11-01",
            "name": "[parameters('sites_resumevisitor_fn_name')]",
            "location": "UK South",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', parameters('serverfarms_ASP_htmlresume_bf8b_name'))]"
            ],
            "kind": "functionapp,linux",
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('serverfarms_ASP_htmlresume_bf8b_name'))]",
                "reserved": true,
                "siteConfig": {
                    "linuxFxVersion": "Python|3.11"
                },
                "httpsOnly": true,
                "publicNetworkAccess": "Enabled"
            }
        }
    ]
}
